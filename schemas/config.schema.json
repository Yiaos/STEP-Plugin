{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "STEP Config",
  "type": "object",
  "required": ["routing", "file_routing", "gate"],
  "properties": {
    "routing": { "type": "object" },
    "file_routing": { "type": "object" },
    "gate": {
      "type": "object",
      "required": ["lint", "typecheck", "test", "build"],
      "properties": {
        "lint": { "type": "string" },
        "typecheck": { "type": "string" },
        "test": { "type": "string" },
        "build": { "type": "string" },
        "dangerous_executables": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "worktree": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "branch_prefix": { "type": "string" }
      }
    },
    "enforcement": {
      "type": "object",
      "properties": {
        "require_dispatch": {
          "type": "object",
          "properties": {
            "full": { "type": "boolean" },
            "lite": { "type": "boolean" }
          }
        },
        "planning_phase_write_lock": {
          "type": "object",
          "properties": {
            "full": { "type": "boolean" },
            "lite": { "type": "boolean" }
          }
        }
      }
    }
  }
}
